<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %>" name="title" id="title" class="form-control" required>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <input type="text" value="<%= article.description %>" name="description" id="description" class="form-control"
        required>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>




<a href="/" class="btn mt-2 btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary mt-2">Save </button>